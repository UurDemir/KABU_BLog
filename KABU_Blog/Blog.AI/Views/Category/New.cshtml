@using Blog.Common.Extensions
@using Blog.Models
@using Blog.Models.Types
@model Category

@{
    ViewBag.Title = "New";
}



<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2>
                <i class="halflings-icon white edit"></i><span class="break"></span>Mesaj
            </h2>
            <div class="box-icon">
            </div>
        </div>
        <div class="box-content" id="showModel">

            <form class="form-horizontal" id="NewCategory">
                <fieldset>
                    @if (Model != null)
                    {
                        @Html.HiddenFor(m => m.Id)
                        ;
                    }

                    @Html.EditorFor(m => m.Name)
                    @Html.EditorFor(m => m.ParentId, new
               {
                   items = new List<SelectListItem>
                        {
                            new SelectListItem
                            {
                                Value = "10",
                                Text = "test"
                            }
                        ,
                        new SelectListItem
                        {
                            Value = "25",
                            Text = "test2"
                        }}
               })

                    @Html.EditorFor(m => m.Status, new { items = EnumHelper<Status>.GetList() })
                    @Html.EditorFor(m => m.Description)

                </fieldset>
            </form>
        </div>
    </div><!--/span-->
</div><!--/row-->
